- var npm = 'node_modules/'

doctype html
html(lang='en')

  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Peanut CSS
    // Core dist
    link(rel='stylesheet', href='dist/peanut.min.css')
    // HighlightJS CSS
    link(rel='stylesheet', href='node_modules/highlightjs/styles/atelier-lakeside.dark.css')

  body

    // Header
    include includes/header.pug

    main.page

      // Type
      include includes/type.pug

      // Buttons
      include includes/buttons.pug

      // Dropdowns
      include includes/dropdowns.pug

      // Forms
      include includes/forms.pug

      // Tables
      include includes/tables.pug

      // Grid
      include includes/grid.pug

      // Cards
      include includes/cards.pug

      // Miscs
      include includes/misc.pug

  // Component scripts
  script(src='components.js')
  script(src='node_modules/highlightjs/highlight.pack.min.js')
  script.
    // Highlight code blocks
    hljs.initHighlightingOnLoad();
